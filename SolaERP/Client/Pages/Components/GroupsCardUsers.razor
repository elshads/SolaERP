<MudGrid>
    <MudItem xs="12" sm="6">
        <DataGrid @bind-Data="@groupUsers"
                  @bind-DestinationGridData="@allUsers"
                  Key="@groupUsersKey"
                  @bind-DestinationGridKey="@allUsersKey"
                  SearchFields="@(new List<string> {"FullName", "UserName"})" ShowToolbar="false" Title="Group Users" CanMoveRight="true" RowDraggable="true" Height="calc(100vh - 400px)" Pageable="false">
            <GridColumn Field="@(nameof(AppUser.FullName))" Title="Name" />
            <GridColumn Field="@(nameof(AppUser.UserName))" Title="Username" />
        </DataGrid>
    </MudItem>
    <MudItem xs="12" sm="6">
        <DataGrid @bind-Data="@allUsers"
                  @bind-DestinationGridData="@groupUsers"
                  Key="@allUsersKey"
                  @bind-DestinationGridKey="@groupUsersKey"
                  SearchFields="@(new List<string> {"FullName", "UserName"})" ShowToolbar="false" Title="All Users" CanMoveLeft="true" RowDraggable="true" Height="calc(100vh - 400px)" Pageable="false">
            <GridColumn Field="@(nameof(AppUser.FullName))" Title="Name" />
            <GridColumn Field="@(nameof(AppUser.UserName))" Title="Username" />
        </DataGrid>
    </MudItem>
</MudGrid>

@code {
    List<AppUser> groupUsers = new List<AppUser> { new AppUser { FullName = "Samir", UserName = "samir@example.com" }, new AppUser { FullName = "Tural", UserName = "tural@example.com" } };
    List<AppUser> allUsers = new List<AppUser> { new AppUser { FullName = "Arif", UserName = "arif@example.com" }, new AppUser { FullName = "Pasha", UserName = "pasha@example.com" } };

    Guid groupUsersKey;
    Guid allUsersKey;
}

<style>
    @@media (min-width: 600px) {
        .mud-grid-item-sm-6 {
            flex-grow: 0;
            max-width: 100%;
            flex-basis: 100%;
        }
    }

    @@media (min-width: 768px) {
        .mud-grid-item-sm-6 {
            flex-grow: 0;
            max-width: 50% !important;
            flex-basis: 50% !important;
        }
    }
</style>